@using WebSite.Models

@model IEnumerable<TimeEffortModel>

@{
    ViewBag.Title = "Time Effort";
}


<script type="text/javascript">
    window.PROJECT_INDEX_URL = '@Url.Action("Index", "TimeEffort")';
    window.PROJECT_NAME_URL = '@Url.Action("FilterProjectName", "TimeEffort")';
</script>

<h4 class="page-header">Time effort</h4><br />

<div class="div-name-filters">
    <p>
        <label class="label-name-filters">Project</label>
    </p>
    <p>
        <label class="label-name-filters">Team member</label>
    </p>
    <p>
        <label class="label-name-filters">Show records from</label>
    </p>
    <p>
        <label class="label-name-filters">to</label>
    </p>
    <p>
        <input type="checkbox" style="margin-left:40px">
        <label style="margin-left:10px">In a month</label>
        <br />
    </p>
</div>

<div class="div-filters">
    <p>
        <select class="select" style="height: 25px" id="ProjectManagement_Project" onchange="FilterProjectName(this, this.value)">
            <option value="-1">All projects</option>
            @foreach (TimeEffortModel report in Model)
            {
                <option value="@report.ProjectId">@report.ProjectName</option>
            }
        </select>
    </p>
    <p>
        <input type="date" />
    </p>
    <p>
        <input type="date" />
    </p>
    <p>

        <select class="select" style="width:103px">
            <option>Month</option>
        </select>
        <select class="select" style="width:103px">
            <option>Year</option>
        </select>
    </p>
</div>



<table class="table">
    <tr>
        <!--
        Добавлен checkbox для выделения всех отчетов.
        Для использования на других страницах необходимо добавить к checkbox (который должен выделять всё) класс "checkALL".
        -->
        <th>Project</th>
        <th>Effort</th>
        <th>Overtime</th>
        <th>Total</th>
    </tr>

    @foreach (var projectEffort in Model)
    {
        <tr>
            <td>@projectEffort.ProjectName</td>
            <td>@projectEffort.Effort</td>
            <td>@projectEffort.Overtime</td>
            <td>@projectEffort.Total</td>
        </tr>
    }
</table>
